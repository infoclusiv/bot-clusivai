[Unit]
Description=Clusivai Telegram Bot
After=network.target

[Service]
Type=simple
User=root
WorkingDirectory=/root/bot-recordatorios
ExecStart=/root/bot-recordatorios/venv/bin/python3 bot.py
Restart=always
RestartSec=10
EnvironmentFile=/root/bot-recordatorios/.env

[Install]
WantedBy=multi-user.target
